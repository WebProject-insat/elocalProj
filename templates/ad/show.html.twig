{% endblock %}

{% block body %}

    <div class="adtitle" style="background-image: url({{ ad.coverImage }});background-size: cover;background-position:center ">
        <div class="container py-4 my-3">
            <h2>{{ ad.title }}</h2>
            <p>{{ ad.introduction }}</p>
            <p class="h2">
                <strong> {{ ad.rooms }} rooms </strong> for <strong>{{ ad.price }}DT/Month</strong>
            </p>
            <a href="#" class="btn btn-secondary">Apply!</a>
