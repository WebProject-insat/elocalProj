{% extends 'base.html.twig' %}

{% block title %}Offers{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="my-2">Our Hosts offers</h2>
        <p></p>

        <div class="row">
        {% for ad in ads %}
            <div class="col-md-4">
                <div class="card bg-light border-secondary mb-3">
                    <div class="card-header text-center">
                        {{ ad.rooms }} rooms, <strong> {{ ad.price }} DT/Month </strong> <br>
                        <small>Not yet rated</small>
                    </div>

                    <img src="{{ ad.coverImage }}" alt="coverImageLoading" height="300px" class="thumbnail">

                    <div class="card-body">
                        <h4 class="card-title">{{ ad.title }}</h4>
                        <hr>
                        <p class="card-text">
                            {{ ad.introduction }}
                        </p>
                            <a href="" class="btn btn-info">En savoir plus</a>

                    </div>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}
