{% extends 'base.html.twig' %}

{% block title %}
    Login
{% endblock %}



{% block body %}
    <p>&nbsp;</p>
    <div class="container" style="margin-bottom: 130px">
    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3">
                <h1>Connectez vous</h1>
                {% if hasError %}
                    <div class="alert alert-danger">votre email/password est invalide</div>
                {% endif %}
                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">
                        <label for="email">Email :</label>
                        <input type="email" class="form-control"  value="{{ username  }}" placeholder="Email Address..."
                               required name="_username" id="email"></div>
                    <div class="form-group">
                        <label for="password">Password :</label>
                        <input type="password" class="form-control" placeholder="Password"
                               required name="_password" id="password">
                    </div>
                    <button type="submit" class="btn btn-primary">Login!</button>

                </form>
            </div>


        </div>
    </div>

        <br>
        <p class="text-secondary">You don't have an account ? <a href="{{ path('security_registration') }}"> Create
                one!</a></p>
    </div>
{% endblock %}